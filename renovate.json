{
  "timezone": "Europe/Berlin",
  "lockFileMaintenance": {
    "enabled": true
  },

  "prHourlyLimit": 1,
  "automerge": true,
  "automergeType": "pr-comment",
  "automergeComment": "lgtm",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["^polkadot"],
      "groupName": "merge with hazmat suit",
      "enabled": false
    }
  ],
  "extends": [
    "config:base"
  ]
}
