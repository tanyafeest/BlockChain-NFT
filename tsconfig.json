{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@fortawesome/fontawesome-common-types": [
        "./node_modules/@fortawesome/fontawesome-common-types/index"
      ]
    },
    "types": [
      "webpack",
      "webpack-env",
      "@nuxt/types",
      "@nuxtjs/i18n",
      "@types/node",
      "vue-apollo",
      "@types/jest"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist", "**/*.spec.ts"],
}
