{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/i18n",
      "@nuxtjs/color-mode",
      "@types/node",
      "vue-apollo",
      "vitest/globals",
      "cypress",
      "cypress-file-upload"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist", "**/*.spec.ts"]
}
